<div class="container">
<h1>crear journalist    . </h1>
</div>

<div class=" card col-8">

<%= form_with model: @journalist, method: :post do |form|%>
<div class=" border p-5 shadow">

    <div class="mb-3">
        <%= form.label :name, "Nombre", class:"form-label"%>
        <%= form.text_field :name, class:"form-control"%>
    </div>
    <div class="mb-5">
        <%= form.label :lastname, "Apellido", class:"form-label"%>
        <%= form.text_field :lastname, class:"form-control", id:"exampleFormControlTextarea", rows:"3"%>
    </div>
    <div class="mb-3">
        <%= form.label :speciality, "Especialidad", class:"form-label"%>
        <%= form.text_field :speciality, class:"form-control"%> 
    </div>
    <div>
        <%= form.submit "Enviar", class:"btn btn-dark"%>
    </div>
</div>
<% end %>
</div>